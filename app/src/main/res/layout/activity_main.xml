<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anusha.mastermind_cs.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/toGuessViewId">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:color/darker_gray"
                android:id="@+id/answerView"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1.03"
            android:weightSum="1"
            android:id="@+id/wholeid">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:id="@+id/pegViewId">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:layout_height="80dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/row8"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/row7"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/row6"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/row5"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/row4"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:text=":"
                    android:layout_width="match_parent"
                    android:id="@+id/row3"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/row2"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/row1"
                    android:textSize="14sp"
                    android:layout_height="40dp"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/boardId"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonLayoutId">

            <Button
                android:layout_height="wrap_content"
                android:id="@+id/buttonRed"
                android:onClick="onClick"
                android:background="@android:color/holo_red_dark"
                android:layout_width="60dp" />

            <Button
                android:layout_height="wrap_content"
                android:id="@+id/buttonBlue"
                android:onClick="onClick"
                android:background="@android:color/holo_blue_bright"
                android:layout_width="60dp" />
            <Button
                android:layout_height="wrap_content"
                android:id="@+id/buttonPink"
                android:onClick="onClick"
                android:background="?attr/colorAccent"
                android:layout_width="60dp" />
            <Button
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:onClick="onClick"
                android:id="@+id/buttonOrange"
                android:layout_width="60dp" />
            <Button
                android:layout_height="wrap_content"
                android:id="@+id/buttonPurple"
                android:onClick="onClick"
                android:background="?attr/actionModeSplitBackground"
                android:layout_width="60dp" />


            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonGreen"
                android:onClick="onClick"
                android:background="@android:color/holo_green_light" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <Button
                android:text="PLAY"
                android:layout_width="50dp"
                android:id="@+id/playButton"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:layout_height="30dp"
                android:onClick="play" />

            <Button
                android:text="NEW GAME"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/resetButton"
                android:layout_weight="1"
                android:onClick="reset"
                android:background="@android:color/holo_red_light" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
